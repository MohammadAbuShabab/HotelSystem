@model GuestInputModel

@{ ViewData["Title"] = "Edit Guest"; }

<div class="row">
    <div class="col-lg-4 offset-lg-4">
        <h2>Edit Guest</h2>
    </div>
</div>

<div class="row">
    <div class="col-lg-4 offset-lg-4">
        <form asp-controller="Guests" asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" id="name" placeholder="Enter name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardNumber"></label>
                <input asp-for="CardNumber" class="form-control" id="phone-number" placeholder="Enter phone number">
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>